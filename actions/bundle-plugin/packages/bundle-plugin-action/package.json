{
  "name": "@grafana/bundle-plugin",
  "version": "1.0.8",
  "repository": {
    "directory": "packages/bundle-plugin",
    "url": "https://github.com/grafana/plugin-tools"
  },
  "author": "Grafana",
  "license": "Apache-2.0",
  "bin": "./dist/bin/run.js",
  "type": "module",
  "exports": {
    "node": {
      "import": "./index.js"
    },
    "default": "./index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc && chmod +x ./dist/bin/run.js",
    "dev": "nodemon --exec 'tsc'",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "archiver": "^7.0.0",
    "minimist": "^1.2.2",
    "proxy-agent": "6.3.1"
  },
  "devDependencies": {
    "@grafana/eslint-config": "^6.0.1",
    "@grafana/tsconfig": "^1.2.0-rc1",
    "@types/archiver": "^6.0.2",
    "@types/minimist": "^1.2.2",
    "@tsconfig/node20": "^20.1.2",
    "@tsconfig/recommended": "^1.0.1",
    "nodemon": "^3.0.1",
    "prettier": "2.5.1",
    "typescript": "^5.2.2",
    "vitest": "^1.1.3",
    "@types/node": "20.10.1"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*"
    ],
    "ext": "*",
    "events": {
      "start": "cls || clear"
    }
  },
  "engines": {
    "node": ">=20"
  }
}
